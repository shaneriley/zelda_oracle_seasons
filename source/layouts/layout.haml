!!! 5
%html(lang="en-US")
  %head
    %title Dragon Warrior Text Adventure
    %meta(charset="utf-8")
    /[if IE]
      = javascript_include_tag "html5"
    = stylesheet_link_tag "application"
    = javascript_include_tag "jquery.min", "application", "handlebars"
    = yield_content :head

  %body
    %header
      %h1 Dragon Warrior
      %h2 Text Adventure

    %main
      = yield

    %footer
      %p Code &copy; 2014 #{link_to "Shane Riley", "http://shaneriley.com", target: "_blank"}. Copy and artwork &copy; 1990 Nintendo of America, Inc.

    = javascript_include_tag "templates"
